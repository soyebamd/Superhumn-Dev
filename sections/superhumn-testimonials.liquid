{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

    .section-{{ section.id }}-image-width-text__background-image{
    
  
  background:{{ section.settings.background_image_color }}  url('{{section.settings.background_image | img_url: 'master' }}' ); 

    background-size: auto;
    background-repeat: no-repeat;
    position: relative;
    background-position: center;
   

    position:relative;


}



{% if section.settings.heading_image %}
.title-bg-{{ section.id }}{
    background:url('{{section.settings.heading_image | img_url: 'master' }}' );
    repeat:no-repeat;

    background-repeat: no-repeat;
    background-size: contain;
    background-position: bottom;



}

{% endif %}

.superhumn-title{
    position:relative;
    margin:auto; 
    text-align:center;
    
 }

 .testimonial-heading-block{}

 .superhumn-title.h1{ font-size:74px;}

.superhumn-title:before, .superhumn-title:after{

font-size: 33px;
font-style: normal;
font-weight: 600;
line-height: normal;
letter-spacing: 0.99px;
text-transform: uppercase; 
  position:relative;
    display:block;
    text-transform:uppercase;
  -webkit-text-stroke-width: .3px;
  -webkit-text-stroke-color: #fff;
  position: relative;
  color: transparent;
    font-family: "phonkregular_demo";

}

.superhumn-title:before{
    content:  "{{ section.settings.title_before }}";
  


   




}


.superhumn-title:after{
    content:  "{{ section.settings.title_after }}";
   
}

.multicolumn-card__info{
    padding:.5em;
    background:transparent!important; 
}

.multicolumn-card{background:transparent!important; }

.testimonials{ position:relative;


    max-width: 437px;
    margin: auto;

}



.testimonials__wrapper{
       position: absolute;
  top: 4%;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  padding: 40px 30px;
   
}



h3.inline-richtext{
font-family: "Roboto", sans-serif;
font-size: 24px;
font-style: normal;
font-weight: 800;
line-height: 22.64px; /* 94.332% */ 
}


.testimonials__wrapper *{
    color:#fff;



}



.testimonials__title{    display: flex;
    justify-content: space-between;
}

.testimonials__text{ margin-top:22px;}

.testimonials__profile-img{
           position: relative;
    top: -24px;
    border-radius: 100%;
    left: 44px;
}

.testimonials-title-wrapper{ margin:auto; text-align:center;      width: 100%;}
.testimonials-title-wrapper .animation-strock-effect { top:-160px;     z-index: -1; letter-spacing:normal; }


.testimonials-title-wrapper .titleEffectStrock{ font-size:74px;letter-spacing:normal;  }

.navigation{
    display: flex;
width: 564px;
padding: 50px 0px;
justify-content: space-between;
align-items: center; 
margin:30px auto 0 auto;

}

.arrow{
        vertical-align: middle;
}

/* .slide{
  margin: 30px;

} */

.testimonials svg{ width:100%; }



.dots{    padding: 0;
    margin: 0;
    display: flex;
    list-style: none;
}

.arrow:first-child {
  transform: rotate(-180deg);
}

.dots li {    margin: 0 10px; }




.custom-dots-container-{{ section.id }} {
  display: flex;
  justify-content: center;
 
}

.testimonial__slider .custom-dot-{{ section.id }} {
  width: 30px;
  height: 30px;
  display:block!important;
 
  margin: 0 5px;
  cursor: pointer;
  background:url({{ 'dot.svg' |  asset_url }});
  background-repeat:no-repeat;
  background-position:center;
}

.testimonial__slider .custom-dot-{{ section.id }}.active {
   
  background:url({{ 'dot-active.svg' |  asset_url }})!important;
      background-repeat: no-repeat !important;
    background-position: center !important;
   
}




