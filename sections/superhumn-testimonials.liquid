  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Multicolumn",
      "label": "t:sections.multicolumn.settings.title.label"
    },

     {
      "type": "inline_richtext",
      "id": "title_before",
      "default": "Multicolumn",
      "label": "t:sections.multicolumn.settings.title.label"
    },


       {
      "type": "inline_richtext",
      "id": "title_after",
      "default": "Multicolumn",
      "label": "t:sections.multicolumn.settings.title.label"
    },


     
    {
