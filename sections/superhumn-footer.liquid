
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}



<div
  id="Banner-{{ section.id }}"
  class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}
    
      color-{{ section.settings.color_scheme }}  position-relative  section-{{ section.id }}-padding"
>


<div class="page-width">

<div class="grid grid--1-col grid--2-col grid--4-col-tablet">

<div class="grid__item">First col </div>

<div class="grid__item">Sec col </div>


<div class="grid__item">Third col </div>


<div class="grid__item">Forth col </div>


</div>


</div>




</div>


{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section",

  "settings": [

  {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
  {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
   
  ],
  "blocks": [
    
  ],
  "presets": [
    {
      "name": "Footer"
  
    }
  ]
}
{% endschema %}
