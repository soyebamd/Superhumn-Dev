
 {% form 'customer', class: 'newsletter-form superhumn-form' %}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="newsletter-form__field-wrapper">
                  <div class="field superhumn-field">
                    <input
                      id="NewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="field__input_superhumn"
                      value="{{ form.email }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      placeholder="starlord_777@superhumn.co"

                      {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="Newsletter-error--{{ section.id }}"
                      {% elsif form.posted_successfully? %}
                        aria-describedby="Newsletter-success--{{ section.id }}"
                      {% endif %}                     
                      required
                    >
                    
                    <label class="field__label field__label_supter" for="NewsletterForm--{{ section.id }}">
                      {{ 'email-1.svg' |  file_url |  img_tag}}
                    </label>
                    <button
                      type="submit"
                      class="newsletter-form__button field__button"
                      name="commit"
                      id="Subscribe"
                      aria-label="{{ 'newsletter.button_label' | t }}"
                    >
                     

                    <svg width="26" height="24" viewBox="0 0 26 24" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M2.99895 13.5798L10.9821 11.9831C11.695 11.8407 11.695 11.609 10.9821 11.4666L2.99895 9.86984C2.52344 9.77491 2.06033 9.31137 1.9654 8.83629L0.368683 0.853124C0.225859 0.13986 0.646206 -0.191543 1.30687 0.113348L25.6677 11.3567C26.1078 11.5598 26.1078 11.8899 25.6677 12.093L1.30687 23.3363C0.646206 23.6412 0.225859 23.3098 0.368683 22.5966L1.9654 14.6134C2.06033 14.1383 2.52344 13.6748 2.99895 13.5798Z" fill="white"/>
</svg>


                    </button>
                  </div>
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                      {%- render 'icon-error' -%}
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email -}}
                    </small>
                  {%- endif -%}
                </div>
                {%- if form.posted_successfully? -%}
                  <h3
                    class="newsletter-form__message newsletter-form__message--success form__message"
                    id="Newsletter-success--{{ section.id }}"
                    tabindex="-1"
                    autofocus
                  >
                    {% render 'icon-success' -%}
                    {{- 'newsletter.success' | t }}
                  </h3>
                {%- endif -%}
              {% endform %}
