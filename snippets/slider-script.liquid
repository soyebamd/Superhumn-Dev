<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


<script>
jQuery(function($){
setTimeout(function(){
   $('.testimonials-slider-{{ section.id }}').slick({ 



    autoplay: true,
      autoplaySpeed: 2000, // Adjust this value as needed (in milliseconds)
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 1,
      speed: 1000, // Animation speed in milliseconds
  
   dots: false,
     arrows: true,
     
      // appendDots: '.dots',

    prevArrow: '#moveLeft-{{ section.id }}',
      nextArrow: '#moveRight-{{ section.id }}',
    
    
      responsive: [ 
    {
      breakpoint: 1200,
      settings: {
        slidesToShow: 2,
     
        
      }
    },
    {
      breakpoint: 900,
      settings: {
        slidesToShow: 1,
      }
    },

   
  ]
   



   })

   


   
  var slidesCount = $('.testimonials-slider-{{ section.id }}').slick('getSlick').slideCount;
  for (var i = 0; i < slidesCount; i++) {
    $('.custom-dots-container-{{ section.id }}').append('<div class="custom-dot-{{ section.id }}"></div>');
  }

  $('.custom-dot-{{ section.id }}').click(function(){
    var index = $(this).index();
    $('.testimonials-slider-{{ section.id }}').slick('slickGoTo', index);
  });

  $('.testimonials-slider-{{ section.id }}').on('beforeChange', function(event, slick, currentSlide, nextSlide){
    $('.custom-dot-{{ section.id }}').removeClass('active');
    $('.custom-dot-{{ section.id }}').eq(nextSlide).addClass('active');
  });

 }, 1000)

   })


</script>