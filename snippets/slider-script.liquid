<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


<script>
jQuery(function($){
setTimeout(function(){
   $('.testimonials-slider-{{ section.id }}').slick({ 
  
 slidesToShow: 3,
    slidesToScroll: 1,
    autoplay: true, // Set to true to enable autoplay
    autoplaySpeed: 50, // Set autoplay speed (lower values scroll faster)
    vertical: true, // Set to true to enable vertical sliding
    verticalSwiping: true, // Set to true to enable vertical swiping
       

    arrows: false, // Remove arrows if not needed
    dots: false, // Remove dots if not needed
    infinite: true, // Enable infinite loop
    speed: 5000, // Set speed of scrolling between slides
    pauseOnHover: false, // Disable pause on hover
    cssEase: 'linear', // Use linear easing for smooth scrolling
    touchMove: false // Disable touch move for better scrolling experience
      
     
      // appendDots: '.dots',

    prevArrow: '#moveLeft-{{ section.id }}',
      nextArrow: '#moveRight-{{ section.id }}',
      autoplay: true,

    
      responsive: [ 
    {
      breakpoint: 1200,
      settings: {
        slidesToShow: 2,
     
        
      }
    },
    {
      breakpoint: 900,
      settings: {
        slidesToShow: 1,
      }
    },

   
  ]
   



   })

   


   
  var slidesCount = $('.testimonials-slider-{{ section.id }}').slick('getSlick').slideCount;
  for (var i = 0; i < slidesCount; i++) {
    $('.custom-dots-container-{{ section.id }}').append('<div class="custom-dot-{{ section.id }}"></div>');
  }

  $('.custom-dot-{{ section.id }}').click(function(){
    var index = $(this).index();
    $('.testimonials-slider-{{ section.id }}').slick('slickGoTo', index);
  });

  $('.testimonials-slider-{{ section.id }}').on('beforeChange', function(event, slick, currentSlide, nextSlide){
    $('.custom-dot-{{ section.id }}').removeClass('active');
    $('.custom-dot-{{ section.id }}').eq(nextSlide).addClass('active');
  });

 }, 1000)

   })


</script>